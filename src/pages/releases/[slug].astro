---
import { getCollection, render } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '../../layouts/PostLayout.astro';
import { addExpressiveCode, removeH1s } from '../../libs/rehype';
import { getSemVerFromRelease, getVersionWithoutPatch, isAtLeastMinorRelease } from '../../libs/semver';

export async function getStaticPaths() {
	const releases = await getCollection('releases');

	return releases.map((release) => ({
		params: { slug: release.id },
		props: { release },
	}));
}

const { release } = Astro.props;

const htmlContent = await addExpressiveCode(await removeH1s(release.data.descriptionHTML));

const version = getSemVerFromRelease(release);
const showImage = isAtLeastMinorRelease(version);
const versionWithoutPatch = getVersionWithoutPatch(version);
---

<Layout {release}>
  {showImage && <Image src={`https://release-image-generator.trueberryless.org?width=1650&height=640&text=${versionWithoutPatch}`} alt={`Release Image`} inferSize={true} class={"minor-release-image"}/>}
  <div set:html={htmlContent} />
</Layout>

<style>
  .minor-release-image {
    margin-bottom: 2rem;
  }
</style>
